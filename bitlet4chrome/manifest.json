{
  "name": "BitLet 4 Chrome",
  "version": "0.1",
  "description": "Automatically opens torrent files with BitLet, making them ready for download.",
  "icons": { 
		"128": "images/download_manager_128x128.png",
 		"48": "images/download_manager_48x48.png"
	},
  "background_page": "background.html",
  "permissions": ["http://*/*"],
  "page_action": {
    "default_title": "BitLet links",
    "default_icon": "images/download_manager_64x64.png",
    "popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["tooltip/style.css", "css/content.css"],
      "js": ["torrentUrls.js", "common.js", "tooltip/script.js", "content.js"]
    }
  ]
}